{# @var \App\Entity\Order order #}
{% extends 'base.html.twig' %}

{% block title %}Edit order{% endblock %}

{% block body %}
    <h2>Edit order #{{ order.id }}</h2>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.quantity) }}
    {{ form_row(form.price) }}

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-danger" href="{{ path('admin_order_list') }}">Cancel</a>
    </div>

    {{ form_end(form) }}
{% endblock %}