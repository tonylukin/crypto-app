{{ form_start(form) }}

{% if form.name is defined %}
<div class="mb-3">
    {{ form_row(form.name) }}
</div>
{% endif %}

<div class="row">
    <div class="col-sm-6">
        {{ form_row(form.totalPrice) }}
        {{ form_row(form.active) }}
        {{ form_row(form.riskable) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.upperThreshold) }}
        {{ form_row(form.lowerThreshold) }}
    </div>
</div>

<div class="mt-3">
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-danger" href="{{ path('admin_symbol_list') }}">Cancel</a>
</div>

{{ form_end(form) }}